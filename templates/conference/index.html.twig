{% extends 'base.html.twig' %}

{# Afficher en titre de la page « Livre d’or des 
conférences » #}


{% block title %}
	Livre d'or des conférences
{% endblock %}
{% block body %}
	<h1>Livre d'or des conférences</h1>
	<h2>Faîtes-nous un retour !!!</h2>
	{# Afficher la liste des conférences dans une liste #}
	<ul class="list-group">
		{% for conferenceRepository in conferences %}
			<li class="list-group-item">
				{{ conferenceRepository.getCity() ~ ' - ' ~ conferenceRepository.getYear() }}
				<a href="{{ path('ficheConference', {'id': conferenceRepository.getId()}) }}">
					<span class="bi bi-eye-fill link-secondary"> Voir</span>
				</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
